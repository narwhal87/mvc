<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        <script src="https://kit.fontawesome.com/19518c5ef8.js" crossorigin="anonymous"></script>
    </head>
    <body class="blackjack">
        <header class="site-header" style="background-image: url({{ asset('img/background2.jpeg') }}); background-position: 0% 25%;">
            <span class="site-title">My Symfony Site</span>
        </header>
        <button class="open-button" id="nav-button"><i class="fa fa-bars"></i></button>
        <nav class="burger" id="nav-burger">
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                <li><a href="{{ path('api_index') }}" target="_blank">API</a></li>
                <li><a href="{{ path('pig_start') }}">PIG</a></li>
                <li><a href="{{ path('card') }}">Card</a></li>
                <li><a href="{{ path('session') }}">Session</a></li>
                <li><a href="{{ path('game') }}">21</a></li>
                <li><a href="{{ path('library') }}">Library</a></li>
                <li><a href="{{ path('metrics') }}">Metrics</a></li>
                <li><a href="{{ path('proj_home') }}">Blackjack</a></li>
            </ul>
        </nav>
        <nav class="nav-blackjack">
            <ul>
                <li><a href="{{ path('init_blackjack_get') }}">Start game</a></li>
                <li><a href="{{ path('proj_home') }}">Rules</a></li>
                <li><a href="{{ path('proj_about') }}">About</a></li>
                <li><a href="{{ path('session') }}">Session</a></li>
            </ul>
        </nav>
        <script language="javascript">
            const navButton = document.getElementById("nav-button");

            navButton.addEventListener("click", (event) => {
                event.preventDefault();
                if (document.getElementById("nav-burger").style.display === "inline") {
                    document.getElementById("nav-burger").style.display = "none";
                } else {
                    document.getElementById("nav-burger").style.display = "inline";
                }
            });
        </script>
        {% block body %}
        {# Here is the content rendered from the twig templates extending this base class #}
        {% endblock %}
        <footer class="site-footer">
            <span>Copyright Â© Alf Tore Pettersson alpt22</span>
        </footer>
    </body>
</html>

{% extends "base.html.twig" %}

{% block title %}Card Draw{% endblock %}

{% block body %}
<div class="pig">
    <h1>Roll a dice</h1>
    <div class="container">
        <div class="aside"></div>
        <div class="main card">

            <p>Here is the value of the card.</p>

            <ul>
                {% for card in deck|slice(2,3) %}
                <li>{{ card }}</li>
                {% endfor %}
            </ul>

        </div>
    </div>
</div>
{% endblock %}
{% extends "base.html.twig" %}

{% block title %}Library{% endblock %}

{% block body %}
<div class="library">
    <h1>Add books to the library</h1>
    <div class="container">
        <div class="aside">
            {{ include('library/aside.html.twig') }}
        </div>
            
        <div class="main library">
            <p>{{ include('flash.html.twig') }}</p>

            

            <form method="post" action="{{ path('library_create_post') }}" class="lib_form">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"></input>
                <label for="isbn">isbn</label>
                <input type="number" name="isbn" id="isbn"></input>
                <label for="author">author</label>
                <input type="text" name="author" id="author"></input>
                <label for="img">img</label>
                <input type="text" name="img" id="img"></input>
                
                
                <button class="button green" type="submit" name="book_create" id="book_create" value="book_create">Add book</button>
            </form>
            
        </div>
    </div>
</div>
{% endblock %}